<div class="container-fluid p-0">
  <div class="dashboard-bg">
    <div class="row g-4">

      <div class="col-12 col-lg-4">
        <div class="card shadow-sm border-0 rounded-4 overflow-hidden h-100">

          <div class="card-user">
            <h1 class="fw-bold mb-1">Hello, <%= current_user.name %></h1>
            <div class="text-muted d-flex align-items-center">
              <i class="fa-solid fa-location-dot me-2"></i>
              <span><%= current_user.location %></span>
            </div>
          </div>
          <%= image_tag "torcidas/torcida_botafogo.png",
                        class: "hero-img" %>
          </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="next-matches shadow-sm rounded-4 mb-4">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h3 class="mb-0">Upcoming matches: <%= current_user.club.name %></h3>
              <i class="fa-regular fa-futbol"></i>
            </div>

            <% if @my_matches.any? %>
              <div class="vstack gap-3">
                <% @my_matches.each do |match| %>
                  <% dt = match.played_at %>
                  <div class="card rounded-4 border shadow-sm">
                    <div class="match-details card-body d-flex justify-content-between align-items-center">
                      <div class="text-center flex-fill">
                        <%= image_tag match.home_team.shield_path, class: "img-fluid mb-1", style: "height:40px;" %>
                        <div class="fw-bold"><%= match.home_team.name %></div>
                      </div>

                      <div class="text-center flex-fill">
                        <% if match.played_at.present? %>
                          <div class="fw-semibold"><%= match.played_at.strftime("%d/%m") %></div>
                          <small class="text-muted"><%= match.played_at.strftime("%H:%M") %></small>
                        <% end %>
                      </div>

                      <div class="text-center flex-fill">
                        <%= image_tag match.away_team.shield_path, class: "img-fluid mb-1", style: "height:40px;" %>
                        <div class="fw-bold"><%= match.away_team.name %></div>
                      </div>
                    </div> <!-- /.match-details -->
                  </div>   <!-- /.card -->
                <% end %>
              </div> <!-- /.vstack -->
            <% else %>
              <p class="text-muted">No upcoming matches for your team.</p>
            <% end %>

            <div class="d-grid mt-3">
              <%= link_to "Search events", events_path, class: "btn btn-secondary rounded-pill" %>
            </div>
          </div>
        </div>

        <div class="events">
          <div class="card-body">
            <h3 class="mb-0">Confirmed events</h3>
              <div class="card-events">
                <% if @attendances.any? %>
                  <div class="row row-cols-1 row-cols-md-2 g-3">
                    <% @attendances.each do |attendance| %>
                      <div class="col">
                        <div class="card rounded-4 shadow-sm position-relative h-100">
                          <%= link_to "", event_path(attendance.event), class: "stretched-link" %>
                          <div class="card-body">
                            <div class="d-flex align-items-center gap-3">
                              <div class="text-center border rounded-3 px-3 py-2">
                                <div class="fw-bold"><%= attendance.event.date&.strftime("%d/%m") %></div>
                                <small class="text-muted"><%= attendance.event.date&.strftime("%H:%M") %></small>
                              </div>
                              <div>
                                <p class="fw-semibold mb-1"><%= attendance.event.name %></p>
                                <small class="text-muted d-block">
                                  <i class="fa-regular fa-map me-1"></i><%= attendance.event.address %>
                                </small>
                                <small class="text-muted">
                                  <i class="fa-solid fa-users me-1"></i>
                                  <%= pluralize(attendance.event.attendances.count, "attendee") %>
                                </small>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <p class="text-muted mb-0">You don't have any event confirmed.</p>
                <% end %>
              </div>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-4">
        <div class="card shadow-sm rounded-4">
          <div class="other-matches">
            <% if @other_matches.any? %>
              <div class="vstack gap-4">
                <% @other_matches.each do |match| %>
                  <% dt = match.played_at %>
                  <div class="card rounded-4 shadow-sm bg-light">
                    <div class="card-body d-flex justify-content-between align-items-center gap-3">

                      <div class="text-center flex-fill">
                        <%= image_tag match.home_team.shield_path,
                                      class: "img-fluid mb-1",
                                      style: "height:40px;" %>
                        <div class="fw-bold small"><%= match.home_team.name %></div>
                      </div>

                      <div class="text-center flex-fill">
                        <% if dt.present? %>
                          <div class="fw-semibold"><%= dt.strftime("%d/%m") %></div>
                          <small class="text-muted"><%= dt.strftime("%H:%M") %></small>
                        <% end %>
                      </div>

                      <div class="text-center flex-fill">
                        <%= image_tag match.away_team.shield_path,
                                      class: "img-fluid mb-1",
                                      style: "height:40px;" %>
                        <div class="fw-bold small"><%= match.away_team.name %></div>
                      </div>
                    </div>
                    <div class="card-footer text-center bg-transparent border-0">
                      <%= link_to "Detalhes", match_path(match),
                                  class: "btn btn-sm btn-outline-secondary rounded-pill" %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-muted">No upcoming matches.</p>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%= simple_form_for [event, message], data: { controller: "message", message_target: "form" } do |f|%>
  <%= f.input :content,
        label: false,
        placeholder: "Type your message...",
        input_html: {
          class: "bg-white",
          data: { action: "keydown->message#keydown" }
        } %>
  <%= f.submit "Send", class: "btn btn-primary" %>
<% end %>

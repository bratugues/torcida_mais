<div class="mt-3">
  <h1><%=@event.name%></h1>

  <h4>Organizado por:</h4>
  <p><%= @event.user.email %></p>

  <h4>Jogo:</h4>
  <p><%= @event.match.title %></p>

  <h4>Endere√ßo:</h4>
  <p><%= @event.address%></p>

  <h4>Time do Evento:</h4>
  <p><%= @event.team%></p>

  <%= simple_form_for [@event, @attendance] do |f| %>
    <%= f.submit "Confirm presence", class: "btn btn-primary" %>
  <% end %>

  <div class="buttons mt-3">
    <%= link_to "Back", events_path, class: "btn btn-primary"%>
    <%= link_to "Chat", event_chats_path(@event), class: "btn btn-primary"%>
  </div>
</div>

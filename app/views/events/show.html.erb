<div class="mt-3">
  <h1><%=@event.name%></h1>

  <h4>Organizado por:</h4>
  <p><%= @event.user.email %></p>

  <h4>Jogo:</h4>
  <p><%= @event.match.title %></p>

  <h4>Endereço:</h4>
  <p><%= @event.address%></p>

  <h4>Time do Evento:</h4>
  <p><%= @event.team%></p>

  <%= simple_form_for [@event, @attendance] do |f| %>
    <%= f.submit "Confirm presence", class: "btn btn-primary" %>
  <% end %>

  <div class="buttons mt-3">
    <%= link_to "Back", events_path, class: "btn btn-primary"%>
    <%= link_to "Chat", event_chats_path(@event), class: "btn btn-primary"%>
  </div>
</div>

<h3 class="mt-3">My confirmed review</h3>

  <ul>
    <% @event.reviews.each do |review| %>
      <li><%= review.rating %></li>
      <li><%= review.title %></li>
      <li><%= review.content %></li>
    <% end %>
  </ul>

  <h3>Deixe seu comentário</h3>
  <%= simple_form_for [@event, @review] do |f| %>
    <%= f.input :rating, as: :integer, placeholder: "Dê sua nota de 1 a 5" %>
    <%= f.input :title, as: :text, placeholder: "Titulo da sua avaliação" %>
    <%= f.input :content, as: :text, placeholder: "Deixe seu comentário" %>
    <%= f.submit "Enviar", class: "btn btn-primary" %>
  <% end %>

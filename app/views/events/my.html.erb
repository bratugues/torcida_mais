<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="mb-0 main-blue-text">My Events</h1>
      <%= link_to "Create new event",
                  new_event_path,
                  class: "btn btn-secondary" %>
    </div>

  <div class="row mt-4">
    <% @events.each do |event|%>
      <div class="col-4 mb-3">
          <div class="card w-100 text-center" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><strong><%= image_tag event.match.home_team.shield_path, width: 40 %><%=event.match.title%><%= image_tag event.match.away_team.shield_path, width:40%></strong></h5>
              <h6 class="card-subtitle mb-2 text-body-secondary"><%=event.name%></h6>
              <p class="card-text"><strong>Location:</strong> <%=event.address%></p>
              <p class="card-text"><strong>Date:</strong> <%= event.date.strftime("%d/%m/%Y") %> - <%= event.date.strftime("%H:%M") %></p>
              <%=link_to "See event", event_path(event), class:"card-link btn btn-primary"%>
            </div>
          </div>
        </div>
    <%end%>
  </div>
</div>
